<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="mycar" name="carrrr" class="am.zzz.beans.initialization.Car">
        <property name="name" value="m1" />
    </bean>

    <!--<bean id="c2" name="c2" class="am.zzz.beans.initialization.Car">-->
        <!--<property name="name" value="m2" />-->
    <!--</bean>-->

    <!--<bean id="c3" name="c3" class="am.zzz.beans.initialization.Car">-->
        <!--<property name="name" value="m3" />-->
    <!--</bean>-->

    <bean id="person" class="am.zzz.beans.initialization.Person">
        <property name="name" value="sam" />
        <property name="carName">
            <idref bean="mycar"/>
        </property>
        <property name="car">
            <ref bean="mycar"/>
        </property>
    </bean>

    <bean id="MyApplicationAware" class="am.zzz.beans.initialization.MyApplicationAware" />

    <bean id="taskExecutor" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor"></bean>

</beans>